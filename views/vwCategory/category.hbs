{{#fillHtmlContent 'css'}}
<link rel="stylesheet" href="/css/category.css">
{{/fillHtmlContent}}

<div class="body">
    <h2>
        {{category.Name}}
    </h2>
    <div class="parent1">
        <div class="child1">
            {{#with firstNews}}
            <a class="div1" href="/news/news?id={{Id_News}}&subcategory={{Id_SubCategory}}&category={{Id_Category}}">
                <img alt="{{Meta_title}}" src="/imgs/uploads/{{Image}}">
                <div class="content-container">
                    <h4>{{truncateText Meta_title 50}}</h4>
                    <p>{{truncateText Meta_description 200}}</p>
                    <p>{{formatDate Date}}</p>
                </div>
            </a>
            {{/with}}

            <div class="triple-highlight">
                {{#each topNews}}
                <a class="highlight-element"
                    href="/news/news?id={{Id_News}}&subcategory={{Id_SubCategory}}&category={{Id_Category}}">
                    <img class="hinhanh-div" alt="{{Meta_title}}" src="/imgs/uploads/{{Image}}">
                    <div>
                        <h5>{{truncateText Meta_title 35}}</h5>
                        <p>{{formatDate Date}}</p>
                    </div>
                </a>
                {{/each}}
            </div>
        </div>

        <div class="child2">
            {{#each otherNews}}
            <a class="div2" href="/news/news?id={{Id_News}}&subcategory={{Id_SubCategory}}&category={{Id_Category}}">
                <div class="infor">
                    <h4>{{formatDate Date}}</h4>
                    <h6>{{truncateText Meta_title 50}}</h6>
                    <p>{{truncateText Meta_description 120}}</p>
                </div>
                <img src="/imgs/uploads/{{Image}}" alt="{{Meta_title}}" class="image-container">
            </a>
            {{/each}}
        </div>
    </div>

    <div class="parent2">
        {{#each topSubCategories}}
        <div class="highlight-section">
            <a href="/category/{{Id_Category}}/{{Id_SubCategory}}" class="title">
                <h3>{{SubCategoryName}}</h3>
            </a>
            {{#with highlightPost}}
            <a href="/news/news?id={{Id_News}}&subcategory={{Id_SubCategory}}&category={{Id_Category}}"
                class="highlight-post">
                <img src="/imgs/uploads/{{Image}}" alt="{{Meta_title}}">
                <div>
                    <h5>{{truncateText Meta_title 70}}</h5>
                    <p>{{formatDate Date}}</p>
                </div>
            </a>
            {{/with}}
            <div class="other-section">
                {{#each otherPosts}}
                <a class="post-section"
                    href="/news/news?id={{Id_News}}&subcategory={{Id_SubCategory}}&category={{Id_Category}}">
                    <h5>{{truncateText Meta_title 100}}</h5>
                    <img src="/imgs/uploads/{{Image}}" alt="{{Meta_title}}">
                    <p>{{formatDate Date}}</p>
                </a>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>

    <div class="parent3" id="parent3">
        {{#each recentNews}}
        <a href="/news/news?id={{Id_News}}&subcategory={{Id_SubCategory}}&category={{Id_Category}}" class="post">
            <p>{{timeAgo Date}}</p>
            <div class="content">
                <h4>{{truncateText Meta_title 120}}</h4>
                <p>
                    {{truncateText Meta_description 300}}
                </p>
                <div class="content-after">{{SubCategoryName}}</div>
            </div>
            <img src="/imgs/uploads/{{Image}}" alt="{{Meta_title}}" class="image">
        </a>
        {{/each}}
    </div>
    <div class="pagination" id="pagination">
        <ul>
            {{#if isFirstPage}}
            {{!-- Nếu là đầu trang thì không cho ấn --}}
            <li>
                <a href="#" class="isDisable prev-next">Previous</a>
            </li>
            {{else}}
            <li>
                <a href="/category/{{categoryId}}?page={{previousPage}}#parent3" class="prev-next">Previous</a>
            </li>
            {{/if}}


            {{#each this.page_items}}
            {{#if isActive}}
            {{!-- Nếu là là chính trang đó thì không cho ấn --}}
            <li>
                <a href="#" class="isDisable">{{value}}</a>
            </li>

            {{else}}
            <li>
                <a href="/category/{{../categoryId}}?page={{value}}#parent3">{{value}}</a>
            </li>

            {{/if}}
            {{/each}}
            {{#if isLastPage}}
            {{!-- Nếu là cuối trang thì không cho ấn --}}
            <li>
                <a href="#" class="isDisable prev-next">Next</a>
            </li>
            {{else}}
            <li>
                <a href="/category/{{categoryId}}?page={{nextPage}}#parent3" class="prev-next">Next</a>
            </li>
            {{/if}}
        </ul>
        <!-- Thêm các nút phân trang -->
    </div>
</div>