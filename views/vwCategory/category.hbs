<div class="body">
    <h2>
        {{category.Name}}
    </h2>
    <div class="parent1">
        <div class="child1">
            {{#with firstNews}}
            <a class="div1" href="/news/{{Id_News}}">
                <img alt="{{Meta_title}}" src="/imgs/category/mancity1.png">
                <h4>{{Meta_title}}</h4>
                <p>{{truncateText Meta_description 100}}</p>
                <p>{{formatDate Date}}</p>
            </a>
            {{/with}}

            <div class="triple-highlight">
                {{#each topNews}}
                <a class="highlight-element" href="/news/{{Id_News}}">
                    <img class="hinhanh-div" alt="{{Meta_title}}" src="/imgs/category/mancity1.png">
                    <p>{{Meta_title}}</p>
                    <h6>{{formatDate Date}}</h6>
                </a>
                {{/each}}
            </div>
        </div>

        <div class="child2">
            {{#each otherNews}}
            <a class="div2" href="/news/{{Id_News}}">
                <div class="infor">
                    <h4>{{formatDate Date}}</h4>
                    <h6>{{Meta_title}}</h6>
                    <p>{{truncateText Meta_description 100}}</p>
                </div>
                <img src="/imgs/category/mancity1.png" alt="{{Meta_title}}" class="image-container">
            </a>
            {{/each}}
        </div>
    </div>

    <div class="parent2">
        {{#each topSubCategories}}
        <div class="highlight-section">
            <a href="#" class="title">
                <h4>{{SubCategoryName}}</h4>
            </a>
            {{#with highlightPost}}
            <a href="/news/{{Id_News}}" class="highlight-post">
                <img src="/imgs/category/pickball.webp" alt="{{Meta_title}}">
                <h5>{{Meta_title}}</h5>
                <p>{{formatDate Date}}</p>
            </a>
            {{/with}}
            <div class="other-section">
                {{#each otherPosts}}
                <a class="post-section" href="/news/{{Id_News}}">
                    <p>{{Meta_title}}</p>

                    <img src="/imgs/category/nhatban.webp" alt="{{Meta_title}}">
                    <p>{{formatDate Date}}</p>
                </a>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>

    <div class="parent3">
        {{#each recentNews}}
        <a href="/news/{{Id_News}}" class="post">
            <p>{{timeAgo Date}}</p>
            <div class="content">
                <h4>{{Meta_title}}</h4>
                <p>
                    {{truncateText Meta_description 200}}
                </p>
                <div class="content-after">{{SubCategoryName}}</div>
            </div>
            <img src="/imgs/category/shintaeyong.webp" alt="{{Meta_title}}" class="image">
        </a>
        {{/each}}
    </div>
</div>