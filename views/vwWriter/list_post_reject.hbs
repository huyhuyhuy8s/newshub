<div id="body" class="moderator-list">
    <table width="100%">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tiêu đề</th>
                
                <th>Ngày bị từ chối duyệt</th>
                <th>Lý do từ chối</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <td>{{@index}}</td>
                <td>{{this.Title}}</a></td>
                
                <td>{{formatDateAndTime this.Date_feedback}}</td>
                <td>{{this.Reason}}</td> <!-- Hiển thị lý do từ chối -->
            </tr>
            {{/each}}

        </tbody>
    </table>
</div>