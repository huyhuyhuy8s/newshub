                <label for="the thao"> Thể thao</label>
            </div>
            <div>
                <input type="checkbox" id="giao duc" name="giao duc" value="Thời sự">
                <label for="giao duc"> Giáo dục</label>
            </div>
            <div>
                <input type="checkbox" id="doi song" name="doi song" value="Thời sự">
                <label for="doi song"> Đời sống</label>
            </div>
            <div>
                <input type="checkbox" id="the gioi" name="the gioi" value="Thời sự">
