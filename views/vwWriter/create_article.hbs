                <label for="bat dong san"> Bất động sản</label>
            </div>
            <div>
                <input type="checkbox" id="giai tri" name="giai tri" value="Thời sự">
                <label for="giai tri"> Giải trí</label>
            </div>
            <div>
                <input type="checkbox" id="phap luat" name="phap luat" value="Thời sự">
                <label for="phap luat"> Pháp luật</label>
