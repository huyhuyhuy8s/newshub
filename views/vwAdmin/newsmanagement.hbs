<div class="container">
    <h1>Quản lý tất cả bài viết</h1>
    <div class="filter-section">
        <!-- Tìm kiếm -->
        <div class="filter-item">
            <label for="search-input">Tìm kiếm</label>
            <input type="text" id="search-input" placeholder="Tìm kiếm" class="filter-input">
        </div>

        <!-- Chuyên mục và Chuyên mục cấp 2 -->
        <div class="filter-item">
            <label for="category-select">Chuyên mục</label>
            <select id="category-select" class="filter-select">
                <option value="">Chọn chuyên mục</option>
                <option value="thethao">Thể thao</option>
                <option value="giaitri">Giải trí</option>
                <option value="kinhte">Kinh tế</option>
            </select>
        </div>

        <div class="filter-item">
            <label for="subcategory-select">Chuyên mục cấp 2</label>
            <select id="subcategory-select" class="filter-select">
                <option value="">Chọn chuyên mục cấp 2</option>
                <option value="bongda">Bóng đá</option>
                <option value="chungkhoan">Chứng khoán</option>
                <option value="phimanh">Phim ảnh</option>
            </select>
        </div>

        <!-- Tag -->
